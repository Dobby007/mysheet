html
    height 100%
    body
        line-height 105%
        color #777
        height 100%
        font-family: 'Open Sans', sans-serif;
        .wrapper
            position relative
            min-height 100%
            #header
                color #fff
                background-color rgba(0, 0, 0, 60%)
                #logo
                    float left
                    .title
                        padding 4px 5px
                        font-weight bold
                        font-size 14pt
                        a:hover
                            border 0
                            color:#09f;
                #main-menu
                    overflow hidden
                    ul
                        float right
                        li
                            float left
                            padding 8px 6px
                            a
                                color #fff